<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Reviews">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/barLayout1">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolBar"
            android:background="@color/mintgreen"/>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/background">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:layout_gravity="center"
            android:id="@+id/rlayout">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/patient"
                android:id="@+id/therapistpic"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/therapistemail"
                android:layout_below="@+id/therapistpic"
                android:layout_marginTop="15dp"
                android:text="Therapist email"
                android:layout_centerHorizontal="true"
                android:textColor="@color/Text"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@id/therapistemail"
                android:hint="REVIEW THERAPIST"
                android:layout_marginTop="20dp"
                android:id="@+id/review"
                android:textColor="@color/Text"
                android:textColorHint="@color/Text"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/submit"
                android:layout_marginTop="25dp"
                android:text="SUBMIT REVIEW"
                android:layout_below="@+id/review"
                android:layout_centerHorizontal="true"/>



        </RelativeLayout>




    </androidx.cardview.widget.CardView>






</LinearLayout>